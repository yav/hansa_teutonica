build-type:          Simple
extra-source-files:  CHANGELOG.md

library
  hs-source-dirs:      src
  exposed-modules:
    Basics, Player, Edge, Node, Stats, Bonus, Utils,
    Question, Game, Board, Geometry,
    Interact,
    Actions.Place,
    Board.Index
    Board.Builder,
    Board.Britannia45,
    Board.Britannia3,
    Board.East,
    Board.Hansa45,
    Board.Hansa3
  extensions: BlockArguments, NamedFieldPuns, ParallelListComp,
              OverloadedStrings
  build-depends:
    base >=4.13,
    containers, text, tf-random, aeson, vector
  default-language:    Haskell2010
  ghc-options:         -Wall


executable ht-hs
  hs-source-dirs:      app
  main-is:             Main.hs
  extensions: BlockArguments, NamedFieldPuns, ParallelListComp,
                                                        OverloadedStrings
  build-depends:
    base >=4.13,
    containers,
    bytestring,
    text,
    ht-hs,
    tf-random,
    websockets-snap, websockets, snap-server, aeson

  default-language:    Haskell2010
  ghc-options:         -Wall

executable ht-editor
  hs-source-dirs:      app
  main-is:             EditorMain.hs
  build-depends:       base, ht-hs
  default-language:    Haskell2010
  ghc-options:         -Wall




